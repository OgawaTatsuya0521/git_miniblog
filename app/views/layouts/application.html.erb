<!DOCTYPE html>
<html>
  <head>
    <title>Miniblog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header">
        <h1><a href="/miniblogs">Miniblog</a></h1>
          <% if user_signed_in? %>
            <div class="user_nav grid-6">
              <%= link_to "Sing-out", destroy_user_session_path, method: :delete %>
              <a class="post" href="/miniblogs/new">Post</a>
            </div>
          <% else %>
            <div class="grid-6">
              <%= link_to "Sing-in", new_user_session_path , method: :get ,class: 'post'%>
              <%= link_to "Sing-up", new_user_registration_path , method: :get  ,class: 'post'%>
            </div>
          <% end %>
      </div>
    </header>
    
    <%= yield %>
  </body>
</html>

<div class="post_contents" >
    <% @tweet.each do |tweet| %>
      <div class="post_detail">
        <h3><%= tweet.text %></h3>
        <% if user_signed_in? && current_user.id == tweet.user_id %>
          <div class="more_list">
            <ul >
              <li class="item">
                <%= link_to 'Edit', "/miniblogs/#{tweet.id}/edit", method: :get  %>
              </li>
              <li class="item">
                <%= link_to 'Delete', "/miniblogs/#{tweet.id}", method: :delete %>
              </li>
            </ul>
          </div>
        <% end %>
        <span class="name">
          <a href=" ">
            <span>poster</span>
            <%= tweet.user.nickname %>
          </a>
        </span>
      </div>
    <% end %>
</div>